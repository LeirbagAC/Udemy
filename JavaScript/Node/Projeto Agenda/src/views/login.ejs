<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-2"></div>

    <div class="col-8 my-3">
      <h1 class="text-center">Login</h1>
      <p class="text-center lead">Faça o login ou crie sua conta abaixo.</p>

      <div class="row">
        <div class="col-lg">
          <h4>Faça seu cadastro</h4>
          <p>Se ainda não tem conta preencha o formulário abaixo:</p>
          
          <form action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %> >
            <div class="form-group">
              <label class="form-label">Seu e-mail</label>
              <input type="email" class="form-control" placeholder="exemplo@gmail.com" name="email">
            </div>
            <div class="form-group">
              <label class="form-label">Sua Senha</label>
              <input type="password" class="form-control"  placeholder="exemploSenha123" name="password">
            </div>
            <button class="btn btn-primary">Criar Conta</button>
          </form>

        </div>

        <div class="col-lg">
          <h4>Faça seu login</h4>

          <p>Se já tem conta faça o login abaixo:</p>
          
          <form action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %> >
            <div class="form-group">
              <label class="form-label">Seu e-mail</label>
              <input type="email" class="form-control" placeholder="exemplo@gmail.com" name="email">
            </div>
            <div class="form-group">
              <label class="form-label">Sua Senha</label>
              <input type="password" class="form-control"  placeholder="exemploSenha123" name="password">
            </div>
            <button class="btn btn-primary">Entrar</button>
          </form>

        </div>
      </div>

    </div>

    <div class="col-2"></div>
  </div>
</div>

<%- include('includes/footer') %>